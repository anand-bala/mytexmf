% -- Theory of computation stuff
\newcommand{\NP}{\(\mathcal{NP}\)}

% -- Misc
\newcommand{\expnum}[2]{{#1}\mathrm{e}{#2}}

% -- Helper functions
% just to make sure it exists for probabilities and sets
\providecommand\given{}
% can be useful to refer to this outside \Set
\newcommand\SetSymbol[1][]{%
  \nonscript\:#1\vert\allowbreak\nonscript\:\mathopen{}}

% -- Tuple Notation
\DeclarePairedDelimiterX\Tuple[1]\lparen\rparen{%
  \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Set notation (from https://www.ctan.org/pkg/mathtools)
\DeclarePairedDelimiterX\Set[1]\{\}{%
\renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Automatic lparen rparen sizing with \of
\DeclarePairedDelimiterX\of[1]\lparen\rparen{%
  \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Automatic lbrack rbrack sizing with \Bof
\DeclarePairedDelimiterX\Bof[1]\lbrack\rbrack{%
  \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Probability
\DeclareMathOperator{\Dist}{\mathcal{D}}
\DeclareMathOperator{\Prob}{\mathrm{Pr\,}}
\DeclareMathOperator{\PExp}{\mathbb{E\,}}
