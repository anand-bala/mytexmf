\ProvidesPackage{notation}[2020/06/17 A package with common notation used in Anand's papers]

\RequirePackage{mathtools}

% Vector notation
\newcommand{\vect}[1]{\boldsymbol{\mathbf{#1}}}

% -- Theory of computation stuff
\newcommand{\NP}{\(\mathcal{NP}\)}

% -- Misc
\newcommand{\expnum}[2]{{#1}\mathrm{e}{#2}}

% -- Helper functions
% just to make sure it exists for probabilities and sets
\providecommand\given{}
% can be useful to refer to this outside \Set
\newcommand\SetSymbol[1][]{%
\nonscript\:#1\vert\allowbreak\nonscript\:\mathopen{}}

% -- Tuple Notation
\DeclarePairedDelimiterX\Tuple[1]\langle\rangle{%
  \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Set notation (from https://www.ctan.org/pkg/mathtools)
\DeclarePairedDelimiterX\Set[1]\{\}{%
  \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Automatic lparen rparen sizing with \of
\DeclarePairedDelimiterX\of[1]\lparen\rparen{%
    \renewcommand\given{\SetSymbol[\delimsize]}#1}

% -- Probability
\DeclareMathOperator{\Dist}{\mathcal{D}}
\DeclareMathOperator{\Prob}{\mathrm{Pr\,}}
\DeclareMathOperator{\PExp}{\mathbb{E\,}}

% -- Operators
\DeclareMathOperator*{\argmax}{argmax}
\DeclareMathOperator*{\argmin}{argmin}
\DeclareMathOperator*{\minimize}{minimize}
\DeclareMathOperator*{\maximize}{maximize}
\newcommand{\subjectto}{\textrm{subject to}}

\DeclareMathOperator{\grad}{\nabla}
\DeclareMathOperator{\vgrad}{\mathbf{\nabla}}
\DeclarePairedDelimiter\ceil{\lceil}{\rceil}
\DeclarePairedDelimiter\floor{\lfloor}{\rfloor}

% -- Absolute and Norms
\DeclarePairedDelimiterX\abs[1]\lvert\rvert{\ifblank{#1}{\:\cdot\:}{#1}}
\DeclarePairedDelimiterX\norm[1]\lVert\rVert{\ifblank{#1}{\:\cdot\:}{#1}}


